<%= form_with url: url,
  method: :patch,
  data: {
    controller: "form",
    action: "ajax:error->form#onError"
  },
  html: { class: "form" } do |f|
%>
  <section>
    <div class="form__group">
      <%= f.label :password, class: "form__label" %>
      <%= f.password_field :password, class: "input", required: true %>
      <%= render Forms::ErrorDisplayComponent.new(error_type: "password") %>
    </div>
    <div class="form__group">
      <%= f.label :confirm_password, class: "form__label" %>
      <%= f.password_field :confirm_password, class: "input", required: true %>
      <%= render Forms::ErrorDisplayComponent.new(error_type: "password_confirmation") %>
    </div>
  </section>
  <div class="form__btn-group">
    <%= f.submit "Reset password", class: "btn btn--primary btn--block btn--graphik" %>
  </div>
<% end %>