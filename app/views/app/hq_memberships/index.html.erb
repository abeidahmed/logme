<%= render Containers::AppComponent.new(headquarter: @headquarter, user: current_user) do |component| %>
  <% component.with(:body) do %>
    <div class="container container--sm">
      <%= render Headers::ActionableComponent.new(title: "HQ members") do |component| %>
        <% component.with(:actioner) do %>
          <button class="btn btn__pill">
            <%= embed_svg "plus-solid", size: 20, class: "btn__pill__icon btn__pill__icon--left" %>
              Invite colleague
          </button>
        <% end %>
      <% end %>
      <div class="actionable__content">
        <nav class="tab">
          <button class="tab__item tab__item--active">All</button>
          <button class="tab__item">Owners</button>
          <button class="tab__item">Members</button>
          <button class="tab__item">Pending</button>
        </nav>
      </div>
      <div class="grid__three_centered mt-4">
        <% @hq_memberships.each do |member| %>
          <%= render "member_card", member: member %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>