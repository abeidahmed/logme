<div data-controller="card" data-action="click@window->card#onOutsideClick" data-card-toggle-class="card__option--hidden">
  <button data-target="card.initiator" data-action="click->card#showConfirmation" class="card__option-item">
    <%= embed_svg "trending-up-solid", size: 20 %>
    Promote to owner
  </button>
  <div data-target="card.confirm" class="card__option-item card__option--hidden">
    <%= embed_svg "trending-up-solid", size: 20 %>
    <%= form_with url: app_hq_membership_url(member), method: :patch do |f| %>
      <%= f.submit "Promote", class: "card__option-confirm card__option-confirm--primary" %>
    <% end %>
    <span class="mx-2">|</span>
    <button data-action="click->card#hideConfirmation" class="card__option-confirm">
      Cancel
    </button>
  </div>
</div>