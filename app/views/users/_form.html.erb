<%= form_with model: model,
  data: {
    controller: "form",
    action: "ajax:error->form#onError"
  },
  html: { class: "form" } do |f|
%>
  <section>
    <div class="form__group">
      <%= f.label :name, class: "form__label" %>
      <%= f.text_field :name, class: "input", required: true %>
      <%= render Forms::ErrorDisplayComponent.new(error_type: "name") %>
    </div>

    <div class="form__group">
      <%= f.label :email, "Email address", class: "form__label" %>
      <%= f.email_field :email, class: "input", required: true %>
      <%= render Forms::ErrorDisplayComponent.new(error_type: "email") %>
    </div>

    <div class="form__group">
      <div class="form__hint-container">
        <%= f.label :password, class: "form__label" %>
        <p class="form__hint">(optional)</p>
      </div>
      <%= f.password_field :password, class: "input", required: true %>
      <%= render Forms::ErrorDisplayComponent.new(error_type: "password") %>
    </div>
  </section>

  <p class="form__tos">
    By signing up, you agree to the <a href="#" class="link link--dark link--weighted">terms and conditions</a>.
  </p>

  <section class="form__btn-group">
    <%= f.submit "Join Applog", class: "btn btn--primary btn--block btn--graphik" %>
  </section>
<% end %>