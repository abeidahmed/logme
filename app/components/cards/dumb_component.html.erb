<div>
  <div class="card card--flexed card--height">
    <%= link_to @url, class: "card__link" do; end %>
    <div class="card__left">
      <div class="card__icon-container" style="background-color: <%= icon_container_color %>">
        <%= embed_svg icon, size: 24 %>
      </div>
    </div>
    <div class="card__right">
      <h4 class="card__title">
        <%= @title %>
      </h4>
      <div>
        <div class="card__content">
          <p class="card__description">
            <%= @description %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>