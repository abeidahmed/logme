<div data-target="sidebar.overlay" class="overlay overlay--hidden"><div></div></div>
<aside data-target="sidebar.sidebar" class="sidebar">
  <div class="sidebar__nav">
    <button data-action="click->sidebar#toggleExtended" class="sidebar__link sidebar__link--toggle">
      <%= embed_svg "arrow-right", size: 24 %>
    </button>

    <%= link_to app_headquarter_projects_url(@headquarter), class: "sidebar__link" do %>
      <%= embed_svg "folder", size: 24 %>
    <% end %>

    <a href="#" class="sidebar__link sidebar__link--active">
      <%= embed_svg "users", size: 24 %>
    </a>

    <a href="#" class="sidebar__link">
      <%= embed_svg "cog", size: 24 %>
    </a>
  </div>

  <div data-target="sidebar.sidebarExtended" class="sidebar__extended">
    <header class="sidebar__extended__header">
      <h3 class="sidebar__extended__title">HQs you're part of</h3>
      <button class="sidebar__extended__btn">
        <%= embed_svg "plus", size: 24 %>
      </button>

      <div class="sidebar__extended__xbtn_container">
        <button data-action="click->sidebar#close">
          <%= embed_svg "x", size: 24 %>
        </button>
      </div>
    </header>

    <div class="sidebar__extended__content">
      <% headquarters.each do |headquarter| %>
        <%= link_to app_headquarter_projects_url(headquarter), class: "sidebar__extended__link" do %>
          <%= embed_svg "tw-logo", size: 32 %>
          <span><%= headquarter.name %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</aside>