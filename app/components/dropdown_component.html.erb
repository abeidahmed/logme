  data-controller="toggle"
  data-action="click@window->toggle#onOutsideClick"
  data-toggle-class="dropdown__container--active"
  class="dropdown"
>
  <%= toggler %>
  <div data-target="toggle.container" class="<%= container_classes %>">
    <div class="dropdown__inner">
      <%= items %>
    </div>
  </div>
</div>